- model_class = Photo
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:image)
    %dd
      %pre.prettyprint= @photo.image_url
    %dt.label.label-default= model_class.human_attribute_name(:tag_line)
    %dd
      %pre.prettyprint= @photo.tag_line
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    photos_path, :class => 'btn btn-default'                 |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_photo_path(@photo), :class => 'btn btn-default'     |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    photo_path(@photo),                                                                                          |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'
%br
  = link_to "Album", album_path(@album.id), :class => 'btn btn-default'                 |
