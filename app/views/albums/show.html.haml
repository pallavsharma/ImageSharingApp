- model_class = Album
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @album.name
    %dt.label.label-default= model_class.human_attribute_name(:user_id)
    %dd
      %pre.prettyprint= @album.user_id
    %br
    = link_to "New Photo", new_photo_path, :class => 'btn btn-primary'
    %br
    = render :partial => 'photos/index'
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), albums_path, :class => 'btn btn-default'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_album_path(@album), :class => 'btn btn-default'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), album_path(@album), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
